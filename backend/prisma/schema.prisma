generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
}

// ===== Enums =====

enum AccountType {
  WALLET
  CHECKING
  SAVINGS
  CREDIT_CARD
  OTHER
}

enum TransactionType {
  INCOME
  EXPENSE
  TRANSFER
}

enum TransactionStatus {
  PENDING
  CONFIRMED
  CANCELED
}

enum CategoryKind {
  INCOME
  EXPENSE
  BOTH
}

enum EntityType {
  USER
  ACCOUNT
  CATEGORY
  TRANSACTION
  AUTH
}

enum ActionType {
  CREATE
  UPDATE
  DELETE
  LOGIN
  LOGOUT
}

// ===== Models =====

model User {
  id           String       @id @default(uuid()) @db.Char(36)
  name         String
  email        String       @unique
  passwordHash String

  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  accounts     Account[]
  categories   Category[]
  transactions Transaction[]
  auditLogs    AuditLog[]
}

model Account {
  id             String        @id @default(uuid()) @db.Char(36)
  userId         String        @db.Char(36)
  name           String
  type           AccountType
  initialBalance Decimal       @default(0) @db.Decimal(14, 2)

  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  user           User          @relation(fields: [userId], references: [id])
  transactions   Transaction[]
}

model Category {
  id        String     @id @default(uuid()) @db.Char(36)
  userId    String     @db.Char(36)
  name      String
  kind      CategoryKind
  color     String?
  icon      String?
  parentId  String?    @db.Char(36)

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  user      User       @relation(fields: [userId], references: [id])

  parent    Category?  @relation("CategoryChildren", fields: [parentId], references: [id])
  children  Category[] @relation("CategoryChildren")

  transactions Transaction[]
}

model Transaction {
  id              String           @id @default(uuid()) @db.Char(36)
  userId          String           @db.Char(36)
  accountId       String           @db.Char(36)
  categoryId      String?          @db.Char(36)
  type            TransactionType
  status          TransactionStatus @default(CONFIRMED)
  amount          Decimal          @db.Decimal(14, 2)
  date            DateTime
  description     String?
  transferGroupId String?          @db.Char(36)

  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  user            User             @relation(fields: [userId], references: [id])
  account         Account          @relation(fields: [accountId], references: [id])
  category        Category?        @relation(fields: [categoryId], references: [id])
}

model AuditLog {
  id         String      @id @default(uuid()) @db.Char(36)
  userId     String?     @db.Char(36)
  entityType EntityType
  entityId   String?
  action     ActionType
  oldValues  Json?
  newValues  Json?
  metadata   Json?

  createdAt  DateTime    @default(now())

  user       User?       @relation(fields: [userId], references: [id])
}